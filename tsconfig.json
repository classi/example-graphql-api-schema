{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "./*.ts",
    "./schema-files.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
